#include "main.h"

/**
 * print_times_table - Prints the times table of the input, starting with 0.
 * @n: The value of the times table.
 */

void print_times_table(int n)
{
	int _numb, _produ, _multi;

	if (n >= 0 && n <= 15)
	{
		for (_num = 0; _num <= n; _num++)
		{
			_putchar('0');

			for (_mult = 1; _mult <= n; _mult++)
			{
				_putchar(',');
				_putchar(' ');

				_prod = _num * _mult;

				if (_prod <= 99)
					_putchar(' ');
				if (_prod <= 9)
					_putchar(' ');

				if (_prod >= 100)
				{
					_putchar((_prod / 100) + '0');
					_putchar(((_prod / 10)) % 10 + '0');
				}
				else if (_prod <= 99 && _prod >= 10)
				{
					_putchar((_prod / 10) + '0');
				}
				_putchar((_prod % 10) + '0');
			}
			_putchar('\n');
		}
	}
}
